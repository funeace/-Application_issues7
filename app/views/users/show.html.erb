<div class="sidebar">

  <!-- プロフィール画面 -->
  <div class="user_info">
    <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 60,60 , format: 'jpeg',class:"img-circle",fallback:"no_image.jpg" %>
      <div>
        name
        <%= @user.name %>
      </div>
      <div> 
      introduction 
        <%= @user.introduction %>
      </div>
    <% if @user == current_user %>
      <%= link_to "Edit",edit_user_path(@user)%> 
    <% else %>
      <%= link_to "Edit",user_path(current_user) %>      
    <% end %>
  </div>

  <!--  投稿画面 -->
  <div class="new_book">
    <h1>New book</h1>
    <%= form_for(@book) do |f| %>
    <div class="field">
      <%= f.label :title, "Title" %> <br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body, "Opinion" %> <br>
      <%= f.text_area :body %>
    </div>
    <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>

<!-- 自分の投稿 一覧 -->
<div class="main">
  <h1>Books</h1>
  <table>
    <!-- テーブルのheader部分 -->
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <!-- テーブルのbody部分 -->
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>